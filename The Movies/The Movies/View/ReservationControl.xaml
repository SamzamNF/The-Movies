<UserControl x:Class="The_Movies.View.ReservationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Movies.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="452*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre: DataGrid -->
        <DataGrid Grid.Column="0"
           ItemsSource="{Binding ReservationList}"
           AutoGenerateColumns="False"
           Margin="0,0,10,0"
           IsReadOnly="True"
           Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ReservationID}" Width="*" />
                <DataGridTextColumn Header="Film" Binding="{Binding Movie}" Width="*" />
                <DataGridTextColumn Header="Kunde ID" Binding="{Binding CustomerID}" Width="*" />
                <DataGridTextColumn Header="Antal Biletter" Binding="{Binding TicketAmount}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Højre: Inputfelter, knapper og genreboks -->
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="10,0,0,0">
           
           <!--ComboBoxes-->
            <Label Content="Biograf:" Margin="0,5,0,0" />
            <ComboBox ItemsSource="{Binding Cinemas}"
          SelectedItem="{Binding SelectedCinema}"
          DisplayMemberPath="CinemaName" Canvas.Top="145" Width="270" Height="22" Canvas.ZIndex="1"/>
       

            <Label Content="Film:" Margin="0,15,0,0" />
            <ComboBox ItemsSource="{Binding MoviePrograms}"
          SelectedItem="{Binding SelectedMovieProgram}"
          DisplayMemberPath="Movie.Title" Canvas.Top="145" Width="270" Height="22" Canvas.ZIndex="2"/>


            <Label Content="Tlf. Nummer:" Margin="0,40,0,0" />
            <ComboBox ItemsSource="{Binding Customers}" 
          SelectedItem="{Binding SelectedCustomer}"
          DisplayMemberPath="PhoneNumber" Canvas.Top="145" Width="270" Height="22" Canvas.ZIndex="2"/>
            
            
            <!-- Inputfelter -->
            <Label Content="Antal Biletter:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding TicketAmount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Height="22"/>
            
            
            
            <!-- Tillføj Knap -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Tilføj Reservation" Width="250" Height="25" Margin="0,20,10,0"
                 Command="{Binding AddReservationCommand}"
                     Background="DeepSkyBlue"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
