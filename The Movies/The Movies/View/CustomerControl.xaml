<UserControl x:Class="The_Movies.View.CustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Movies.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="452*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre: DataGrid -->
        <DataGrid Grid.Column="0"
        ItemsSource="{Binding Customers}"
        AutoGenerateColumns="False"
        Margin="0,0,10,0"
        IsReadOnly="True"
        Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Tlf. Nummer" Binding="{Binding PhoneNumber}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Højre: Inputfelter, knapper og genreboks -->
        <StackPanel Grid.Column="3" VerticalAlignment="Top" Margin="10,0,0,0">

            <!-- Inputfelter -->
            <Label Content="Fornavn:" Margin="0,5,0,0"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Height="22" />
            
            

            <Label Content="Tlf. Nummer:" Margin="0,30,0,0"/>
            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Height="22"/>

            <Label Content="Email:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Height="22"/>

            <!-- Tillføj Knap -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Tilføj Kunde" Width="250" Height="25" Margin="0,20,10,0"
              Command="{Binding AddCustomerCommand}"
              CommandParameter="{Binding ElementName=GenreListBox, Path=SelectedItems}"
                  Background="DeepSkyBlue"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
