<Window x:Class="The_Movies.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Movies.View"
        xmlns:mvvm="clr-namespace:The_Movies.MVVM"
        xmlns:converters="clr-namespace:The_Movies.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <converters:GenreListToStringConverter x:Key="GenreListConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <!--Top Panel Knapper til at skifte view med-->

        <StackPanel Orientation="Horizontal">
            <Button Width="90" Height="35" HorizontalAlignment="Left" Margin="10,5,5,5" FontWeight="Bold" FontSize="16"
                    Content="Film"
                    Background="#333333"
                    Foreground="White"
                    Command="{Binding ShowMovieViewCommand}" FontFamily="Ink Free">
            
            </Button>

            <Button Width="100" Height="35" HorizontalAlignment="Left" Margin="15,5,5,5" FontWeight="Bold" FontSize="16"
                    Content="Program"
                    Background="#333333"
                    Foreground="White"
                    Command="{Binding ShowProgramViewCommand}" FontFamily="Ink Free">
            
             </Button>

            <Button Width="100" Height="35" HorizontalAlignment="Left" Margin="15,5,5,5"
                    Background="#333333"
                    Foreground="White"
                    Content="Kunde"
                    FontWeight="Bold"
                    FontSize="16" FontFamily="Ink Free"/>


            <Button Width="100" Height="35" HorizontalAlignment="Left" Margin="15,5,5,5"
                    Background="#333333"
                    Foreground="White"
                    Content="Reservation"
                    FontWeight="Bold"
                    FontSize="16" FontFamily="Ink Free"/>

        </StackPanel>
        



        <!-- Contentcontrol at skifte hvad vores CurrentView er sat til -->
        
        <ContentControl Content="{Binding CurrentView}"
                        Grid.Row="1"
                        Margin="10"/>
    </Grid>
</Window>