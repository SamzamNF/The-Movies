<UserControl x:Class="The_Movies.View.ScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Movies.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="452*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre: DataGrid -->
        <DataGrid Grid.Column="0"
          ItemsSource="{Binding MoviePrograms}"
          AutoGenerateColumns="False"
          Margin="0,0,10,0"
          IsReadOnly="True"
          Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sal" Binding="{Binding HallNumber}" Width="*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Movie.Title}" Width="*" />
                <DataGridTextColumn Header="Instruktør" Binding="{Binding Movie.Director}" Width="*" />
                <DataGridTextColumn Header="Tidspunkt" Binding="{Binding PlayTime, StringFormat='g'}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!--Højre: Inputfelter og knapper-->
        <Canvas Grid.Column="2" Margin="10,0,0,0">

            <Label Content="Biograf:" Canvas.Top="0"/>
            <ComboBox ItemsSource="{Binding Cinemas}"
                      SelectedItem="{Binding SelectedCinema}"
                      DisplayMemberPath="CinemaName"
                      Canvas.Top="25" Width="283" Canvas.ZIndex="3"/>

            <Label Content="Sal:" Canvas.Top="60"/>
            <ComboBox ItemsSource="{Binding Halls}"
                      SelectedItem="{Binding SelectedHall}"
                      DisplayMemberPath="HallNumber"
                      Canvas.Top="85" Width="283" Canvas.ZIndex="2"/>

            <Label Content="Film:" Canvas.Top="120"/>
            <ComboBox ItemsSource="{Binding Movies}"
                      SelectedItem="{Binding SelectedMovie}"
                      DisplayMemberPath="Title"
                      Canvas.Top="145" Width="283" Canvas.ZIndex="1"/>
            
            <!-- Felter -->
            
            <Label Content="Tidspunkt:" Canvas.Top="180"/>
            <DatePicker SelectedDate="{Binding PlayTime, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="205" Width="283"/>

            <!-- Knapper -->
            <Grid Canvas.Top="245" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}">
                <Button Content="Tilføj Program" Command="{Binding AddMovieProgramCommand}" 
                        Width="250"
                        Background="DeepSkyBlue"
                        Height="25"
                        HorizontalAlignment="Center"
                        />
            </Grid>
        </Canvas>
        
        
    </Grid>
</UserControl>
