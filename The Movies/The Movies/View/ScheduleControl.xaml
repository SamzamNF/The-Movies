<UserControl x:Class="The_Movies.View.ScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Movies.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="452*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre: DataGrid -->
        <DataGrid Grid.Column="0"
          ItemsSource="{Binding MoviePrograms}"
          AutoGenerateColumns="False"
          Margin="0,0,10,0"
          IsReadOnly="True"
          Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sal" Binding="{Binding Hall}" Width="*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="Instruktør" Binding="{Binding Director}" Width="*" />
                <DataGridTextColumn Header="Tidspunkt" Binding="{Binding PlayTime}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!--Højre: Inputfelter og knapper-->
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="10,0,0,0">

            <Expander Header="Biograf">
                <StackPanel>
                    <RadioButton>Biograf 1</RadioButton>
                    <RadioButton>Biograf 2</RadioButton>
                    <RadioButton>Biograf 3</RadioButton>
                    <RadioButton>Biograf 4</RadioButton>
                </StackPanel>
            </Expander>

            <Expander Header="Sal">
                <StackPanel>
                    <RadioButton>Sal 1</RadioButton>
                    <RadioButton>Sal 2</RadioButton>
                    <RadioButton>Sal 3</RadioButton>
                    <RadioButton>Sal 4</RadioButton>
                </StackPanel>
            </Expander>

            <Expander Header="Film">
                <DataGrid>
                    
                </DataGrid>
            </Expander>
            
            <Label Content="Titel:"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        </StackPanel>
        
        
    </Grid>
</UserControl>
